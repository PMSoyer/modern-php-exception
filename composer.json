{
    "name": "brenno-duarte/modern-php-exception",
    "description": "PHP errors in a modern way",
    "license": "MIT",
    "keywords": [
        "exception",
        "throwable",
        "exception-handler",
        "error-handler",
        "whoops",
        "handler",
        "php-exception"
    ],
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "codedungeon/php-cli-colors": "1.*",
        "nunomaduro/termwind": "^1.15",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "nunomaduro/phpinsights": "^2.11",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "ModernPHPException\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
